<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../components/head.ejs") %>
</head>
<body>
  <%- include("../components/navigation.ejs") %>

  <div class="row mt-3">
    <div class="col-6 offset-3">
      <ul class="list-group">
        <% if(products.length > 0) { %>
          <% for(product of products){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= product.title %>
              <span class="badge badge-primary badge-pill ml-1">
                <%= product.cartItem.quantity %>
              </span>

              <form action="/cart/delete" method="POST" class="form-inline d-inline ml-auto">
                <input type="hidden" name="productId" value="<%= product.id %>">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </li>
          <% } %>
        <% } else { %>
          <li class="list-group-item list-group-item-danger">
            No Item in Cart
          </li>
        <% } %>
      </ul>
      <form action="/order" method="post" class="form-inline justify-content-center mt-1">
        <button type="submit" class="btn btn-primary"> Order Now </button>
      </form>
    </div>
  </div>
  
  <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>